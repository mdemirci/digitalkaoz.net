<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="blog_view" pattern="/{year}/{month}/{day}/{slug}">
        <default key="_controller">kaoz4Bundle:Blog:view</default>
    </route>

    <route id="blog_add_comment" pattern="/add-comment/{id}">
        <default key="_controller">kaoz4Bundle:Blog:addComment</default>
    </route>

    <route id="blog_archive_daily" pattern="/{year}/{month}/{day}">
        <default key="_controller">kaoz4Bundle:Blog:archiveDaily</default>
    </route>

    <route id="blog_archive_monthly" pattern="/{year}/{month}">
        <default key="_controller">kaoz4Bundle:Blog:archiveMonthly</default>
    </route>

    <route id="blog_archive_yearly" pattern="/{year}">
        <default key="_controller">kaoz4Bundle:Blog:archiveYearly</default>
    </route>

    <route id="blog" pattern="/">
        <default key="_controller">kaoz4Bundle:Blog:archive</default>
    </route>
    
</routes>
