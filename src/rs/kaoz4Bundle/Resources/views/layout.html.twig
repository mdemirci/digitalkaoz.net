{% block body %}
<div class="page_margins">
    <div id="header">
        {% include "kaoz4Bundle:Components:mainMenu.html.twig" %}
    </div>
    <div id="main" class="{{ app.request.attributes.get('_route') }}" >
        <div id="col1">
            <div id="col1_content" class="clearfix box">
                {% block content %}{% endblock %}
